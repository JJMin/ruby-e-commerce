<header class="page-header">
  <h1>Order #<%= @order.id %></h1>
</header>

<div class="order-summary jumbotron">
  <h4>Thank you for your order!</h4>
</div>

<div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="1">Product</th>
        <th>Description</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |item| %>
      <tr>
        <td><%= image_tag item.product.image.tiny %></td>
        <td><%= item.product.description %></td>
        <td><%= item.item_price_cents / 100 %></td>
        <td><%= item.quantity %></td>
        <td><%= item.total_price_cents / 100 %></td>
      <% end %>
      </tr>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="5">Total price: <%= @order.total_cents / 100 %></th>
      </tr>
      <tr>
        <th colspan="5">Your e-mail: <%= @order.email %></th>
      </tr>
    </tfoot>
  </table>
</div>